<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creedtech.project.iad.iadproject.Vehicle">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Enter Vehicle Details"
            android:textColor="@color/colorAccent"
            android:textSize="30dp"
            android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/vnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="VehicleNumber"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/engnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="EngineNumber"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/chasnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="ChasisNumber"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/make"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Make"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Model"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Year"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Vehicle Color"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <EditText
            android:id="@+id/millage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:drawableLeft="@drawable/account"
            android:drawablePadding="5dp"
            android:ems="10"
            android:hint="Current Millage"
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textColorHint="#999"/>

        <Button
            android:id="@+id/proceed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:background="@drawable/selector_xml_btn_yellow"
            android:text="Proceed"/>


    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
