<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CLITitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Claim ID"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Claim_IDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@+id/CLITitle"
                    android:layout_weight="1"
                    android:textColor="#429ed7"
                    android:textSize="22dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear1"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/VITitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Claim Status"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Claim_StatusTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Claim_Details_IDTextView"
                    android:layout_gravity="right"
                    android:layout_toRightOf="@+id/VITitle"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="20dp" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear2"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CUIDTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Customer NIC"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Customer_IDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Vehicle_IDTextView"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear3"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/CLSTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Vehicle NUMBER"
                    android:textSize="21dp" />

                <TextView
                    android:id="@+id/Vehicle_IDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Customer_IDTextView"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear4"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/AMAStitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount Assigned"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/Amount_AssignedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="22dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear5"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount Payed"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Amount_PayedTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amount_AssignedTextView"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear6"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transaction ID"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Transaction_IDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Amount_PayedTextView"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear7"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Claim Details ID"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/Claim_Details_IDTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Transaction_IDTextView"
                    android:layout_weight="1"
                    android:textColor="#020202"
                    android:textSize="22dp" />
            </LinearLayout>
            <View
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="6dp"
                android:background="@android:color/darker_gray"
                android:layout_marginTop="240dp"/>

        </RelativeLayout>
    </ScrollView>
</LinearLayout>