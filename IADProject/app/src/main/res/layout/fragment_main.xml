<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorButtonNormal"
    tools:context="com.creedtech.project.iad.iadproject.MainFragment">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <fragment
            android:id="@+id/map1"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            tools:context="com.creedtech.project.iad.iadproject.MapsActivity"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp" />

    </RelativeLayout>

    <GridLayout
        android:layout_width="398dp"
        android:layout_height="234dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY="336dp">

        <Button
            android:id="@+id/userdetbt"
            android:layout_width="199dp"
            android:layout_height="108dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="?android:attr/colorMultiSelectHighlight"
            android:text="User Details"
            android:textColorLink="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <Button
            android:id="@+id/claimhistbt"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@android:color/holo_green_light"
            android:text="Claim History"
            android:textSize="18sp"
            android:clickable="true"/>

        <Button
            android:id="@+id/vehicledetbt"
            android:layout_width="200dp"
            android:layout_height="109dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@android:color/holo_orange_light"
            android:text="Vehicle Details"
            android:textSize="18sp" />

        <Button
            android:id="@+id/policydetbt"
            android:layout_width="200dp"
            android:layout_height="115dp"
            android:layout_column="1"
            android:layout_row="0"
            android:background="@android:color/holo_blue_dark"
            android:text="Policy Details"
            android:textSize="18sp" />

    </GridLayout>


</android.support.constraint.ConstraintLayout>
